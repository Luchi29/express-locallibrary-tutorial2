extends layout

block content

  if (title==='Update Genre')
    h1(class='title') Update Genre
  else
    h1(class='title') Create Genre
  
  div(class='container')
    form(method='POST' action='')
      div.form-group
        label(for='name') Genre:
        input#name.form-control(type='text', placeholder='Fantasy, poetry etc.' name='name' value=(undefined===genre ? '' : genre.name), required='true' )
      button.btn(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg  

  div(class='return' title='Return') 
    a(href='/catalog/genres' class='previous') &laquo; Previous
