extends layout

block content
    h1(class='title') Book-instance list

    div(class="container")
        a(class='button-new p-2 mb-4 mt-2 btn' href='/catalog/bookinstance/create') + New Book-instance

    div(class='container')
        table(class='table table-responsive-md')
            thead(style='background-color: #a29bfe')
                tr(style='color: #fff')
                    th Books
                    th Imprint
                    th Status
                    th Actions
            tbody(style='font-size: 13px')
                each val in bookinstance_list
                    tr(class='t-hover') 
                        td #{val.book.title} 
                        td #{val.imprint} 
                        td
                            if val.status=='Available' 
                                span.text-success #{val.status}
                            else if val.status=='Maintenance' 
                                span.text-danger #{val.status}
                            else
                                span.text-warning #{val.status}
                            if val.status!='Available' 
                                span  (Due: #{val.due_back_formated} )
                        td 
                            a(href=val.url)
                                i(class='icono fas fa-list' style='padding-right: 0.5px; color: #78C2AD')
                            a(href=val.url+'/update')
                                i(class='icono fas fa-edit' style='padding-right: 0.5px; color: #78C2AD')
                            a(href=val.url+'/delete')
                                i(class='icono fas fa-trash-alt' style='color: #78C2AD')
                               
                                
                else
                    li There are no book copies in this library.       